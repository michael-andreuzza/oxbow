---
export const excludeFromObfuscation = [
  "bg-zinc-600",
  "text-zinc-600",
  "border-b",
  "bg-zinc-50",
];
---

<div
  class="flex flex-col justify-center p-12 mx-auto bg-white dark:bg-zinc-900"
>
  <!-- Accessible Tabs • Full-width sliding underline -->
  <div
    x-data="{
      keys: ['overview','projects','packages'],
      selected: 'overview',
      focus: 0,
      init(){ this.focus = 0 },
      select(id){ this.selected = id; this.focus = this.keys.indexOf(id) },
      onKeydown(e){
        const last = this.keys.length - 1
        let i = this.focus
        if (e.key==='ArrowRight' || e.key==='ArrowDown') i = i===last?0:i+1
        else if (e.key==='ArrowLeft' || e.key==='ArrowUp') i = i===0?last:i-1
        else if (e.key==='Home') i = 0
        else if (e.key==='End') i = last
        else return
        e.preventDefault()
        const id = this.keys[i]
        this.focus = i
        this.$nextTick(()=>this.$refs['tab-'+id]?.focus())
      }
    }"
    class="w-full max-w-xl mx-auto"
  >
    <div
      class="relative border-b border-zinc-200 dark:border-zinc-700"
      role="tablist"
      aria-orientation="horizontal"
    >
      <div class="text-sm grid grid-cols-3 text-zinc-600 dark:text-zinc-200">
        <template x-for="(id, idx) in keys" :key="id">
          <button
            class="py-2 font-medium text-center focus:outline-none focus-visible:ring-2 focus-visible:ring-zinc-500/50"
            :id="'tab-'+id"
            role="tab"
            :aria-selected="selected===id"
            :tabindex="focus===idx ? 0 : -1"
            :aria-controls="'panel-'+id"
            x-ref="tab-[[id]]"
            @click="select(id)"
            @keydown="onKeydown($event)"
            :class="selected===id ? 'text-zinc-600 dark:text-zinc-400' : 'hover:text-zinc-900 dark:hover:text-zinc-100'"
          >
            <span
              x-text="id==='overview' ? 'Overview' : id==='projects' ? 'Projects' : 'Packages'"
            ></span>
          </button>
        </template>
      </div>
      <div class="absolute left-0 bottom-0 h-[2px] w-full">
        <div
          class="h-full bg-zinc-600 dark:bg-zinc-400 transition-all duration-300"
          :style="{ width: (100/keys.length)+'%', left: (100/keys.length)*focus+'%' }"
        >
        </div>
      </div>
    </div>
    <div class="pt-4 text-sm text-zinc-500 dark:text-zinc-300">
      <section
        x-show="selected==='overview'"
        x-cloak
        role="tabpanel"
        :id="'panel-overview'"
        aria-labelledby="tab-overview"
      >
        <p>Overview content — metrics and quick navigation.</p>
      </section>
      <section
        x-show="selected==='projects'"
        x-cloak
        role="tabpanel"
        :id="'panel-projects'"
        aria-labelledby="tab-projects"
      >
        <p>Projects content — tasks, lists, and ownership.</p>
      </section>
      <section
        x-show="selected==='packages'"
        x-cloak
        role="tabpanel"
        :id="'panel-packages'"
        aria-labelledby="tab-packages"
      >
        <p>Packages content — builds, releases, and release notes.</p>
      </section>
    </div>
  </div>
</div>
