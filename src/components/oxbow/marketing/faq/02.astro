---
import Text from "@/components/fundations/typography/Text.astro";
import Plus from "@/components/fundations/icons/Plus.astro";
import Kicker from "@/components/fundations/typography/Kicker.astro";
// Organized FAQ sections for DRY rendering
const faqSections = [
  {
    title: "General inquiries",
    faqs: [
      {
        question: "What is Oxbow?",
        answer:
          "Oxbow is an all-in-one collaboration platform designed to streamline your team's tasks, files, and conversations in one intuitive workspace.",
      },
      {
        question: "Do you offer a free trial or plan?",
        answer:
          "Yes! Start with a 7-day free trial to explore all features, and enjoy our forever-free plan for small teams once the trial ends.",
      },
      {
        question: "How is my data protected?",
        answer:
          "We use robust encryption and continuous security monitoring to keep your information safe at rest and in transit.",
      },
      {
        question: "Can I use Oxbow offline?",
        answer:
          "Oxbow requires an internet connection to sync data, but recent changes are cached locally for basic offline viewing.",
      },
    ],
  },
  {
    title: "Getting help",
    faqs: [
      {
        question: "How can I contact support?",
        answer:
          "Reach out via our in-app chat or email support@oxbow.appâ€”we strive to respond within one business day.",
      },
      {
        question: "Where can I find help resources?",
        answer:
          "Visit our Help Center for clear guides, tutorials, and API references to get the most out of Oxbow.",
      },
      {
        question: "Can I suggest new features?",
        answer:
          "Absolutely! Head to our feedback portal to submit ideas and vote on upcoming improvements.",
      },
      {
        question: "What's the typical support response time?",
        answer:
          "Our average response time is under 24 hours, with priority handling for paid plan customers.",
      },
    ],
  },
  {
    title: "Subscription & Licensing",
    faqs: [
      {
        question: "What payment methods are accepted?",
        answer:
          "We accept major credit cards, PayPal, and bank transfers for enterprise plans.",
      },
      {
        question: "How do I upgrade or downgrade my plan?",
        answer:
          "Change your subscription tier anytime from the Billing section in your account settings.",
      },
      {
        question: "Can I get a discount for annual billing?",
        answer:
          "Yes, annual plans come with a 15% discount off the monthly rate.",
      },
      {
        question: "Is cancellation refundable?",
        answer:
          "If you cancel within the first 30 days, we offer a full refund, minus any transaction fees.",
      },
    ],
  },
];
---

<section class="bg-white dark:bg-zinc-900">
  <div class="px-8 py-24 mx-auto max-w-7xl md:px-12 lg:px-20">
    <div>
      <Text
        tag="h1"
        variant="displayMD"
        class="font-semibold tracking-tight text-zinc-900 dark:text-white"
      >
        FAQs
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="mt-4 font-medium text-zinc-500 dark:text-zinc-400"
      >
        Everything you need to know about Oxbow in one place.
      </Text>
    </div>
    <div
      class="items-start mt-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4"
    >
      {
        faqSections.map((section) => (
          <div class="overflow-hidden bg-linear-180 outline outline-zinc-100 dark:outline-zinc-800  from-zinc-50 to-zinc-100 dark:from-zinc-800 dark:to-zinc-900 rounded-xl">
            <div class="p-4">
              <Text
                tag="h2"
                variant="textBase"
                class="font-medium text-zinc-900 dark:text-white lg:text-balance"
              >
                {section.title}
              </Text>
            </div>
            <div class="border-t  divide-y border-zinc-200 dark:divide-zinc-100/10 dark:border-zinc-100/10 divide-zinc-200">
              {section.faqs.map((faq) => (
                <details class="p-4 cursor-pointer group ">
                  <summary class="items-start justify-between w-full text-sm font-medium text-left select-none grid grid-cols-4 text-zinc-900 dark:text-white hover:text-zinc-500 dark:hover:text-zinc-400 focus:text-zinc-500  gap-4dark:focus:text-zinc-400">
                    <span class="col-span-3">{faq.question}</span>
                    <Plus
                      class="ml-auto duration-300 ease-out transform group-open:-rotate-45 group-open:text-blue-600 dark:text-zinc-400"
                      size="sm"
                    />
                  </summary>
                  <div class="py-2 pt-2 text-sm text-zinc-500 dark:text-zinc-400">
                    <Text
                      tag="p"
                      variant="textSM"
                      class="font-medium text-zinc-500 dark:text-zinc-400"
                    >
                      {faq.answer}
                    </Text>
                  </div>
                </details>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
