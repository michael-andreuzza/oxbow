---
interface Props {
  variant?:
    | "wide"
    | "prose"
    | "standard"
    | "nav"
    | "footer"
    | "paddinglessDesktop"
    | "paddingless"
    | "narrow"; // Define any variants you need
  class?: string; // Optional prop for additional classes
}
const { variant = "standard", class: extraClass = "" } = Astro.props;
// Map each variant to its specific classes
const variantClasses = {
  narrow: "max-w-xl 2xl:max-w-3xl mx-auto px-8 lg:px-4 ",
  //
  prose: [
    // Base typography
    "prose",
    "prose-base",
    "max-w-none",
    "prose-headings:scroll-mt-24",
    // Body text
    "text-base-500",
    "dark:text-base-400",
    // Headings
    "prose-headings:font-medium",
    "prose-headings:text-base-900",
    "dark:prose-headings:text-white",
    // Links
    "prose-a:text-base-500",
    "prose-a:hover:text-base-900",
    "dark:prose-a:hover:text-base-300",
    "prose-a:duration-200",
    // Strong text
    "prose-strong:font-medium",
    "dark:prose-strong:text-white",
    // Blockquotes
    "prose-blockquote:font-normal",
    "prose-blockquote:tracking-normal",
    "prose-blockquote:text-base-500",
    "dark:prose-blockquote:text-base-600",
    "dark:prose-blockquote:border-base-500",
    // Horizontal rules
    "prose-hr:border-base-300",
    "dark:prose-hr:border-base-700",
    // Images
    "prose-img:border",
    "prose-img:border-base-200",
    "dark:prose-img:border-base-700",
    // Code blocks
    "prose-pre:border-none",
    "prose-pre:rounded-xl",
    "prose-pre:relative",
    "prose-pre:my-0",
    "prose-pre:outline-base-200",
    "dark:prose-pre:outline-base-800",
    "prose-pre:selection:bg-accent-600/10",
    "prose-pre:selection:text-base-900",
    "dark:prose-pre:selection:text-white",
    "prose-pre:overflow-y-hidden",
    "prose-pre:scrollbar-hide",

    // Inline code
    "dark:prose-code:text-white",
    // Tables
    "dark:prose-tr:border-base-700",
    "dark:prose-thead:border-base-700",
  ].join(" "),
  //
  wide: "max-w-screen 2xl:max-w-[1440px] w-full mx-auto px-8 ",
  //
  footer: "mx-auto px-8 w-full max-w-6xl lg:px-0",
  paddinglessDesktop:
    "mx-auto max-w-6xl px-4 xl:px-0  overflow-hidden xl:overflow-visible",
  paddingless: "mx-auto max-w-6xl   overflow-hidden xl:overflow-visible",
  standard:
    "mx-auto px-8 w-full max-w-6xl xl:border-x border-base-200 dark:border-base-800",
  nav: "mx-auto px-8 py-4 lg:py-8 xl:px-0 w-full max-w-6xl border-b border-base-200 dark:border-base-800",
};
// Combine the classes for the specified variant with any extra classes
const classes = `${variantClasses[variant]} ${extraClass}`.trim();
---

<div class={classes}>
  <slot />
</div>
