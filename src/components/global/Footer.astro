---
import Text from "@/components/fundations/typography/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import StripesBG from "@/components/assets/StripesBG.astro";
// Assets
import Logo from "@/components/assets/Logo.astro";
// Fundations

const navLinks = [
  {
    title: "Navigation",
    links: [
      { label: "Home", href: "/" },
      { label: "Changelog", href: "/changelog" },
    ],
  },

  {
    title: "Social",
    links: [
      { label: "Gabriel ", href: "https://x.com/g_perales" },
      { label: "Michael", href: "https://x.com/Mike_Andreuzza" },
      { label: "Oxbow UI", href: "https://x.com/oxbowui" },
    ],
  },
  {
    title: "Tools",
    links: [
      {
        label: "Grid generator",
        href: "/tools/tailwind-css-grid-generator",
      },
      {
        label: "Gradient generator",
        href: "/tools/tailwind-css-gradient-generator",
      },
      {
        label: "Color picker",
        href: "/tools/tailwind-css-color-palette",
      },
    ],
  },
];
---

<footer class="overflow-hidden">
  <Wrapper variant="footer" class="pb-12">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3">
      <div>
        <a
          href="/"
          class="flex items-center text-sm text-base-900 dark:text-white gap-2"
        >
          <span class="sr-only">Go to homepage</span>
          <Logo class="h-6 dark:invert" />
          Oxbow UI
        </a>
        <p class="mt-1 text-sm font-normal text-base-500 text-balance">
          Tailwind CSS & Alpine JS blocks
        </p>
      </div>
      <div class="grid grid-cols-2 gap-8 xl:col-span-2 xl:col-start-3">
        {
          navLinks.map((section, i) => (
            <nav aria-label={section.title}>
              <Text
                tag="h3"
                variant="textBase"
                class="font-medium font-display text-base-900 dark:text-white"
              >
                {section.title}
              </Text>
              <ul
                role="list"
                class="mt-2 text-sm space-y-1 text-base-600 dark:text-base-400"
              >
                {section.links.map((link, j) => (
                  <li>
                    <a
                      class="hover:text-base-900 dark:hover:text-white"
                      href={link.href}
                      title={link.label}
                      target={
                        link.href.startsWith("http") ? "_blank" : undefined
                      }
                      rel={
                        link.href.startsWith("http")
                          ? "noopener noreferrer"
                          : undefined
                      }
                    >
                      {link.label}
                    </a>
                  </li>
                ))}
              </ul>
            </nav>
          ))
        }
      </div>
    </div>

    <div
      aria-hidden="true"
      class="bg-light-vertical-stripes p-20 clip-rect-inset lg:py-62 mt-12"
    >
    </div>
    <div class="flex items-center justify-between pt-4">
      <Text tag="p" variant="textXS" class="text-base-600 dark:text-base-400">
        Â© {new Date().getFullYear()} Oxbow. All rights reserved.
      </Text>
      <a
        href="https://www.netlify.com"
        target="_blank"
        rel="noopener noreferrer"
        title="Deploys by Netlify"
        class="flex gap-2 text-xs items-center text-base-600 dark:text-base-400"
      >
        Powered by
        <img
          src="https://www.netlify.com/v3/img/components/netlify-light.svg"
          alt="Deploys by Netlify"
          class="h-4 dark:invert"
        />
      </a>
    </div>
  </Wrapper>
</footer>
