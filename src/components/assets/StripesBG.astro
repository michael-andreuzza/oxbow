---
const {
  class: className = "",
  variant = "base",
  direction = "vertical",
  ...rest
} = Astro.props;

const variantClass = {
  base: {
    vertical: "bg-base-vertical-stripes dark:bg-light-vertical-stripes",
    horizontal: "bg-base-horizontal-stripes dark:bg-light-horizontal-stripes",
  },
  accent: {
    vertical: "bg-accent-vertical-stripes dark:bg-accent-vertical-stripes-dark",
    horizontal:
      "bg-accent-horizontal-stripes dark:bg-accent-horizontal-stripes-dark",
  },
  secondary: {
    vertical: "bg-blue-vertical-stripes dark:bg-blue-vertical-stripes-dark",
    horizontal:
      "bg-blue-horizontal-stripes dark:bg-blue-horizontal-stripes-dark",
  },
  light: {
    vertical: "bg-light-vertical-stripes dark:bg-base-vertical-stripes",
    horizontal: "bg-light-horizontal-stripes dark:bg-base-horizontal-stripes",
  },
};

const bgClass = variantClass[variant]?.[direction] ?? "";
---

<div
  {...rest}
  aria-hidden="true"
  class={`pointer-events-none ${bgClass} ${className}`}
>
</div>
